#include<cstdio>
#include<cstdlib>
#include<iostream>

#include "lex.h"

FILE *fp, *out ;
char l;
int ind;

void skip_blanks(){
    while( (l = fgetc(fp)) != NULL ){
        if( l == EOF )
            return END;

        if( l == ' ' || l == '\n' || l == '\t')
            continue;
        else{
            fseek(fp, -1, SEEK_CUR);
            return;
        }
    }
}

